pipeline {
    agent any

 

    stages {
        stage('StageBranch') {
            steps {
                sh "git branch staging"
                sh "git checkout staging"
                sh "git pull origin dev"
                sh "git push origin staging"
            }
        }
        stage('Build') {
            steps {
                sh "pip3 install -r requirements.txt"
            }
        }
        stage('Test') {
            steps {
                sh "python3 test_main.py "
            }
        }
        stage('DockerBuild') {
            steps {
                sh "docker build -t jenkins-tp ."
            }
        }
        /*stage('DockerRun') {
            steps {
                sh "docker run -d jenkins-tp"
            }
        }*/

        stage('DockerPush') {
            steps{
                sh "docker login --username=bengbff --password=MMA3zxbhwiv7q10!"
                sh "docker tag jenkins-tp bengbff/jenkinstest:jenkins-tp"
                sh "docker push bengbff/jenkinstest:jenkins-tp"
            }
        }

 

        stage('MergeToMain') {
            steps{
                sh "git branch"
                sh "git checkout master"
                sh "git pull -f origin master"
                sh "git push -f origin staging:master"
            }
        }
    }
}
